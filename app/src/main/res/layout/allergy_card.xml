<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/rlTutorialInfo"
    android:layout_width="fill_parent"
    android:paddingLeft="12sp"
    android:paddingRight="12sp"
    android:paddingBottom="6sp"
    android:paddingTop="4sp"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/cv"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="12dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:contentPaddingTop="-10sp"
        app:cardPreventCornerOverlap="false"
        android:padding="10sp"
        app:cardUseCompatPadding="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <TextView
                android:id="@+id/diagReaccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:textColor="#6F6C70"
                android:layout_below="@+id/diagSeveridad"
                android:layout_gravity="center_vertical|right"
                android:padding="2dp"
                android:paddingRight="5dp"
                android:layout_margin="1dp"
                android:textStyle="italic">
            </TextView>

            <TextView
                android:layout_height="wrap_content"
                android:text=""
                android:layout_width="match_parent"
                android:id="@+id/diagTipo"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_margin="1dp"
                android:capitalize="words"
                android:textStyle="normal"
                android:typeface="serif">
            </TextView>

            <TextView
                android:layout_height="wrap_content"
                android:text=""
                android:layout_width="match_parent"
                android:id="@+id/diagNombre"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_margin="1dp"
                android:capitalize="words"
                android:textStyle="normal"
                android:typeface="serif">
            </TextView>

            <TextView
                android:layout_height="wrap_content"
                android:text=""
                android:layout_width="match_parent"
                android:id="@+id/diagSeveridad"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_margin="1dp"
                android:capitalize="words"
                android:textStyle="normal"
                android:typeface="serif">
            </TextView>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>